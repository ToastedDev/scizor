---
import { getCollection } from "astro:content";
import Layout from "../../layouts/docs.astro";
import { Pencil } from "lucide-react";
import { badgeVariants } from "@/components/ui/badge";

export async function getStaticPaths() {
  const docEntries = await getCollection("docs");
  return docEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();

const editUrl = `https://github.com/ToastedDev/scizor/edit/main/web/src/content/docs/${entry.id}`;
---

<Layout title={entry.data.title} slug={entry.slug} {headings}>
  <div class="mb-5 flex flex-col gap-3">
    <h1 class="text-4xl font-bold tracking-tighter">{entry.data.title}</h1>
    <a
      href={editUrl}
      target="_blank"
      class={badgeVariants({ className: "w-fit flex items-center gap-1.5" })}
    >
      <Pencil className="h-3 w-3" /> Edit this page
    </a>
  </div>
  <article class="markdown">
    <Content />
  </article>
</Layout>
